{
  "name": "halo-theme-sakura",
  "version": "0.2.0",
  "private": true,
  "main": "index.js",
  "repository": "git@github.com:cwxyz007/halo-theme-sakura.git",
  "author": "Gem Xli <x.li.gem@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "build": "run-p build:*",
    "build:client": "cd client && yarn build",
    "build:server": "cd server && yarn build",
    "start": "export NODE_ENV=production && cd server && node ./dist/index.js",
    "lint:js": "eslint --ext \".js,.vue\" --ignore-path .gitignore .",
    "lint": "yarn lint:js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "glib release"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "devDependencies": {
    "@exyz/glib": "^0.4.1",
    "conventional-changelog-cli": "^2.1.1",
    "husky": "4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
