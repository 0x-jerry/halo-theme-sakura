{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    //
    "plugin:vue/vue3-recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },
  "plugins": [
    //
    "vue",
    "@typescript-eslint"
  ],
  "rules": {
    "space-before-function-paren": "off",
    "no-unused-vars": "warn",

    "vue/html-self-closing": "off",
    "vue/max-attributes-per-line": "off"
  }
}
